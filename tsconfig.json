{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      // Core
      "@core-nubimetrics/*": ["src/app/core/*"],
      // Pages
      "@products-nubimetrics/*": ["src/app/pages/products-management/*"],
      // Shared models
      "@models-nubimetrics/*": ["src/app/shared/models/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
